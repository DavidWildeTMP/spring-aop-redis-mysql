<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MyMapper">
    <select id="selectGoodsRank" resultMap="goodsRank">
        select goods.id as id, goods.name as name, sum(o.price * o.quantity) as prices from goods
        left join `order` o
        on o.goods_id = goods.id
        group by goods.id
        order by prices desc
    </select>
    <resultMap id="goodsRank" type="com.github.hcsp.entity.RankItem">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="prices" column="prices"/>
    </resultMap>
</mapper>